<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6E77F6"
    tools:context=".activities.RegisterUser">

    <TextView
        android:id="@+id/registerheadding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit"
        android:text="Lets Register\nAccount"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="500dp"/>

    <TextView
        android:id="@+id/registerdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerheadding"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="130dp"
        android:textColor="@color/black"
        android:text="Hello user, you have\na greateful journey"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/EmailAddressregister"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="@string/email_address"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:inputType="textEmailAddress"
        android:textColorHint="#8E8383"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:layout_marginTop="40dp"
        android:paddingEnd="12dp"
        android:paddingTop="3dp"
        android:textSize="15sp"
        android:fontFamily="@font/outfit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawablePadding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerdescription" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/passwordregister"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingTop="3dp"
        android:paddingEnd="12dp"
        android:textColorHint="#8E8383"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EmailAddressregister" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/confirmpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingTop="3dp"
        android:paddingEnd="12dp"
        android:textColorHint="#8E8383"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordregister"/>


    <Button
        android:id="@+id/register"
        android:text="Register"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmpassword" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8E8383"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/logininregistration"
        android:text="Sign in"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#6E77F6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>