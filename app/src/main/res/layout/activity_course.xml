<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".activities.CourseActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/ogblue"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/classname"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Class Name"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:background="@drawable/background_each_course"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/outfit"
        android:textSize="20sp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/timings"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Timings"
        app:layout_constraintTop_toBottomOf="@id/classname"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        android:background="@drawable/background_each_course"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/days"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Days"
        app:layout_constraintTop_toBottomOf="@id/timings"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:maxLines="1"
        android:background="@drawable/background_each_course"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/professor"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Professor"
        app:layout_constraintTop_toBottomOf="@id/days"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:maxLines="1"
        android:background="@drawable/background_each_course"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/location"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@id/professor"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        android:background="@drawable/background_each_course"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:maxLines="2"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/editbutton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Edit"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="40dp"
        android:stateListAnimator="@null"
        android:layout_marginStart="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/outfit"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/deletebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@+id/editbutton"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:stateListAnimator="@null"
        android:layout_marginStart="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/outfit"
        android:backgroundTint="@color/signout_red"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
