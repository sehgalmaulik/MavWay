<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Fragments.SearchFragment">


    <TextView
        android:id="@+id/text_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="This is Search"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/food_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_utensils"
        android:padding="20dp"
        android:layout_marginTop="150dp"
        android:text="@string/food_button"
        android:textSize="15dp"
        app:circularflow_radiusInDP="5dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/printing_button"

        />

    <Button
        android:id="@+id/printing_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_baseline_print_24"
        android:padding="20dp"
        android:layout_marginTop="150dp"
        android:text="@string/printing_button"
        android:textSize="15dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/food_button"/>

    <Button
        android:id="@+id/vending_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_vending"
        android:padding="20dp"
        android:text="@string/vending_button"
        android:textSize="15dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/food_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/helpdesk_button"

        />

    <Button
        android:id="@+id/helpdesk_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_baseline_info_24"
        android:padding="20dp"
        android:text="@string/helpdesk_button"
        android:textSize="15dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/printing_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vending_button"/>

    <Button
        android:id="@+id/buildings_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_baseline_apartment_24"
        android:padding="20dp"
        android:text="@string/buildings_button"
        android:textSize="15dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/vending_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/maps_button"/>

    <Button
        android:id="@+id/maps_button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:drawableTop="@drawable/ic_baseline_map_24"
        android:padding="20dp"
        android:text="@string/maps_button"
        android:textSize="15dp"
        android:fontFamily="@font/outfit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/helpdesk_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buildings_button"/>




</androidx.constraintlayout.widget.ConstraintLayout>