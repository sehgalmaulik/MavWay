<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/classCodeInput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:ems="10"
        android:textAlignment="center"
        android:fontFamily="@font/outfit"
        android:background="@drawable/consist_text_input_box"
        android:hint="Class code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:textSize="17sp"

        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editClassNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@drawable/consist_text_input_box"
        android:fontFamily="@font/outfit"
        android:hint="Class number"
        android:textSize="17sp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/classCodeInput"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/time_start"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:background="@drawable/consist_text_input_box"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:fontFamily="@font/outfit"
        android:text="Class start"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/dash"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editClassNumber" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@+id/editClassNumber"
        app:layout_constraintLeft_toRightOf="@+id/time_start"
        app:layout_constraintRight_toLeftOf="@+id/time_end"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/outfit"
        app:layout_constraintHorizontal_bias="0.5"
        />



    <TextView
        android:id="@+id/time_end"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:textAlignment="center"
        android:background="@drawable/consist_text_input_box"
        android:textSize="16sp"
        android:padding="10dp"
        android:fontFamily="@font/outfit"
        android:text="Class end"
        app:layout_constraintLeft_toRightOf="@+id/dash"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editClassNumber" />

    <TextView
        android:id="@+id/daysEnter"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:hint="Days"
        android:background="@drawable/consist_text_input_box"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/outfit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_end"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/professorname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Professor"
        android:background="@drawable/consist_text_input_box"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="@font/outfit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysEnter"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TouchTargetSizeCheck" />

    <AutoCompleteTextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/outfit"
        android:textSize="17sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background="@drawable/consist_text_input_box"
        android:hint="Location"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/professorname"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>