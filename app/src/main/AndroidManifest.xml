<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.mavway1"
    android:windowSoftInputMode="stateVisible|adjustResize">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mavway1">
        <activity
            android:name=".activities.Item_display_activity"
            android:exported="false" />
        <activity
            android:name=".activities.InformationForm"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterUser"
            android:exported="false" />
        <activity
            android:name=".activities.LoginScreen"
            android:exported="false" />
        <activity
            android:name=".activities.StartScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Fragments.MainActivity"
            android:exported="true" />
    </application>

</manifest>